package com.example.demo;

import com.example.demo.Controler.CardGame;
import com.example.demo.Controler.Settings;
import com.example.demo.Model.Player;
import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.stage.Stage;

import java.io.IOException;

public class Window extends Application {

    @Override
    public void start(Stage stage) throws IOException {
        FXMLLoader fxmlLoader = new FXMLLoader(Window.class.getResource("hello-view.fxml"));
        Parent root = fxmlLoader.load();
        CardGame cardGameController= fxmlLoader.getController();
        String playerName = cardGameController.getPlayerName();
        String playerLastName = cardGameController.getPlayerLastName();

        // Pass the player's name to the SetUp class
        Player[] players = {new Player(playerName, playerLastName)};
        Settings.setPlayers(players);

        stage.setTitle("Jeu du 6 qui prend");
        stage.setScene(new Scene(root, 1000, 800));
        stage.show();
    }

    public static void main(String[] args) {
        launch();
    }
}
